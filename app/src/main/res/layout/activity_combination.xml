<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tab_selected_strip1">

    <include layout="@layout/general_toolbar"></include>
<!--
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">-->
    <LinearLayout
        android:id="@+id/llNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d9e5efef"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subject_combo"
            android:textSize="@dimen/text_size_med"
            android:padding="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="6dp"
        card_view:elevation="4dp">

    <LinearLayout
        android:id="@+id/chkLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">




    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English Language"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:paddingBottom="5dp"
        android:enabled="false"
        android:editable="false"
        android:checked="true"
        android:id="@+id/english" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Accounting"
        android:id="@+id/accounting" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Agriculture"
        android:id="@+id/agric" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Biology"
        android:id="@+id/biology" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chemistry"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:id="@+id/chemistry" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Christian Religious Knowledge"
        android:id="@+id/crk" />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Commerce"
        android:id="@+id/comm" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Economics"
        android:id="@+id/economics" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Geography"
        android:id="@+id/geography" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Government"
        android:id="@+id/govt" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Literature-In-English"
        android:id="@+id/literature" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Mathematics"
        android:id="@+id/maths" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@drawable/custom_checkbox"
        android:padding="@dimen/element_spacing_normal"
        android:textColor="#666666"
        android:paddingBottom="5dp"
        android:text="Physics"
        android:id="@+id/physics" />

<!--        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#fff"
            android:scrollbars="none"
            android:dividerHeight="0dp">

        </ListView>-->


        <Button
            android:id="@+id/btProceed"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/transparent_button"
            android:text="Proceed"
            android:textColor="@color/theme_primary"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--</ScrollView>-->


</LinearLayout>